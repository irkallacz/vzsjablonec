{block #content}

	<ul class="buttonMenu" n:ifset="$id" n:if="($user->id == $id)">
		<li>
			<a class="buttonLike" n:href="password $id">
				{include svg pencil} změna hesla
			</a>
		</li>
	</ul>

{control memberForm}

