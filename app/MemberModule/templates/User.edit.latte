<script type="text/javascript" src="{$baseUrl}/js/jquery.are-you-sure.js"></script>

	<script type="text/javascript" n:nonce>
	$(function() {		
		var elem = document.createElement('input');
      	elem.setAttribute('type', 'date');

      	if ( elem.type === 'text' ) {
			$('.date').datepicker();
		}

		$('#frm-memberForm').areYouSure();
	});
</script>
