{import '../templates/@svg.latte'}

<div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>

<div id="posts" n:inner-foreach="$posts as $post">
    <div id="post/{$post->id}" n:class="post, target, ($post->date_add > $user->getIdentity()->date_last) ? 'new', ($user->id == $post->member_id) ? logged">
        <div class="top headerLike">
            <a class="float-right" href="{plink Forum:post $post->id}" title="{$post->date_add|timeAgoInWords}">
                {include svg name => comments-o} {$post->date_add|date:'%d.%m.%Y %H:%M'}
            </a>
            <a href="{plink Member:view,$post->member_id}" title="profil uživatele">
                <strong>
                    {$post->member->surname} {$post->member->name}
                    {include svg name => user}
                </strong>
            </a>
        </div>

        <div class="message">
            {if !$search}{$post->text|forumTexy|noescape}{else}{$post->text|replace:$search:'*'.$search.' .[highlight]*'|forumTexy|noescape}{/if}
        </div>

        {var $isTopic = ($post->id == $post->forum_topic_id)}
        {var $isUpdated = ($post->date_add != $post->date_update)}
        {var $isAllow = (($user->id == $post->member_id) or ($user->isInRole('admin')))}

        <div class="bottom" {*n:if="(!$isLocked)or($isLocked and $isUpdated)"*}>
            {*<div n:if="$isUpdated" n:class="update, (($isTopic and ($post->member_id == $user->id)) or !$isLocked) ? float-left" title="{$post->date_update|timeAgoInWords}">*}
            <div class="buttons float-right" n:if="(!$isLocked or $isTopic)and($user->isInRole('member'))">
            {if $isTopic and $isAllow}
                {if $isLocked}
                    <a class="buttonLike" href="{plink Forum:lockTopic $post->id,0}">
                        {include svg name => unlock-alt} odemknout
                    </a>
                {else}
                    <a class="buttonLike" href="{plink Forum:lockTopic $post->id,1}">
                        {include svg name => lock} zamknout
                    </a>
                {/if}
            {/if}

            {if !$isLocked}
                {if $isAllow}
                    <a class="buttonLike confirm" data-query="Opravdu chete příspěvek smazat?" href="{plink Forum:delete $post->id}">{include svg name => trash} smazat</a>
                    <a class="buttonLike" href="{plink Forum:edit $post->id}">{include svg name => pencil} editovat</a>
                {/if}
                <a class="buttonLike" href="{plink Forum:cite $post->id}">{include svg name => quote-left} citace</a>
            {/if}
            </div>

			<div n:if="$isUpdated" class="update" title="{$post->date_update|timeAgoInWords}">
				Upraveno {$post->date_update|date:'%d.%m.%Y %H:%M'}
			</div>

		</div>
		<div class="clearfix"></div>
	</div>
</div>