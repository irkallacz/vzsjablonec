{block #head}
<link rel="stylesheet" type="text/css" href="{$baseUrl}/css/photolist.css">
<style type="text/css" n:syntax="off">
	#slides { position: relative; height: 360px;}
	#js-slides { display: none;}
	.slidesjs-container { text-align: center; }
 	#slides .photoList { position: absolute; top: 25%; min-width: 22em; width: 99%; text-align: center;}
	.slide img { vertical-align: middle; max-height: 270px; max-width: 570px; border: 10px solid white;
	border-radius: 5px; box-shadow: 7px 7px 0 #161b1c;}
</style>

<script src="{$baseUrl}/js/jquery.slides.min.js" type="text/javascript"></script>
<script type="text/javascript" n:syntax="off" n:nonce>
	$(function(){
		$('#js-slides').slidesjs({
			height: 270,
			play: {
				active: false,
				auto: true,
				interval: 5000,
				swap: true
			},
			navigation: {
				active: false
			},
			pagination: {
				active: false
			}
		});
	});
</script>
{/block}

<h2 n:block="title">Novinky</h2>

{block #content}

<div id="slides">
	<ul class="photoList">
		<li n:foreach="$photos as $image">{include #image image => $image}</li>
	</ul>

	<ul id="js-slides" class="slides-container" n:inner-foreach="$photos as $image">
	<li><div class="slide spinner">
		{var $album = $image->ref('album')}
		<a n:href="Album:view#$image->filename,$album->id.'-'.$album->slug" title="{$album->name}">
		<img src="{$baseUrl}/{$photoDir.'/'.$image->album_id.'/'.$image->filename}" alt="{$image->filename}">
		</a>
	</div></li>
	</ul>
</div>


<h2>Nejnovější alba</h2>

<ul id="albumList" n:inner-foreach="$albums as $album">
<li class="row">
{include #photoList, album => $album}
</li>
</ul>

<p><a n:href="Album:default">Všechna alba →</a></p>

{/block}