{block #head}
<style type="text/css" n:syntax="off">
.headerLike { margin: 0; padding: 0 1em 0.5ex 1em; display: inline-block;}
.borderLike { border-left: none; border-right: none; border-bottom: none;}
.buttonMenu li { float: none;}
table#items td, table th { vertical-align: top; padding: 1ex 1ex;}
table#items { border-collapse: collapse; width: 98%; }
table#items td.col { padding: 0;}
table#items .right .headerLike { font-style: italic; text-align: center;}
table#items .first { font-size: 1.1em;}
</style>

{/block}

<h1 n:block="title">Ankety</h1>

{block #content}

<ul class="buttonMenu"><li><a class="buttonLike" n:href="add">{include svg plus} nová anketa</a></li></ul>

<table id="items">
<tr class="first"><th>Anketa</th><th>Počet hlasů</th><th>Poslední hlas</th></tr>
{foreach $ankety as $item}
	{var $post = $item->related('anketa_member','anketa_id')->order('date_add DESC')->fetch()}
	
	{if $post}{var $member = $post->ref('user')}{else}{var $member = 0}{/if}
	
	<tr n:class="borderLike,hoverLike,$item->date_add > $user->getIdentity()->date_last ? 'new', 
	$item->user_id == $user->getId() ? logged">
	{*(($post)and($post->user_id == $user->getId())) ? logged*}
	<td class="col"><a class="noLink" title="{$item->title}{if $item->locked} (uzamčeno){/if}" n:href="Ankety:view,$item->id"><div>
	<strong class="headerLike">
		{if $item->locked}{include svg lock}{/if}
		{$item->title|firstUpper}
	</strong>
	<span class="no-wrap"> {$item->user->surname} {$item->user->name}</span>
	</div></a></td>
	<td class="center">{$item->related('anketa_member','anketa_id')->count('user_id')}</td>
	<td class="col">
	 
	<div class="right" n:if="$post">
	<strong class="headerLike" title="{$post->date_add|timeAgoInWords}">
		<time datetime="{$post->date_add|datetimeC}">{$post->date_add|datetime}</time>
	</strong>
	
	<span n:if="$member" class="no-wrap">{$member->surname} {$member->name}</span>

	</div>
	</td>
	</tr>
{/foreach}
</table>

<p class="right">
<a n:href="Feed:ankety" class="buttonLike">{include svg feed} RSS Ankety</a>
</p>

{/block}