{block #head}
<link rel="alternate" title="VZS Jablonec Forum : {$topic->title}" n:href="//Feed:forum, tid => $topic->id" type="application/rss+xml">

<link rel="stylesheet" href="{$basePath}/css/forum.css" type="text/css">
<link rel="stylesheet" href="{$basePath}/css/forum.posts.css" type="text/css">

<link rel="stylesheet" href="{$basePath}/texyla/css/style.css" type="text/css">
<link rel="stylesheet" href="{$basePath}/texyla/css/theme.css" type="text/css">
<link rel="stylesheet" href="{$basePath}/css/jquery-ui.custom.css" type="text/css">

{control texylaJs}

<script type="text/javascript" src="{$basePath}/js/confirm.js"></script>
<script type="text/javascript" src="{$basePath}/js/jquery.textarea_autosize.min.js"></script>

<script type="text/javascript" n:nonce>
	$.texyla.setDefaults({
		baseDir: {$basePath}+'/texyla',
		previewPath: {link texyPreview}
	});

	$(function () {
		$('.texyla').textareaAutoSize();
		$('.texyla').texyla(forum);
	});
</script>

{/block}

<h1 n:block="title">Fórum</h1>

{block #content}
<div class="float-right">{control vp}</div>

<ul class="inline-nav">
	<li><a n:href="Forum:">Fórum</a></li>
	<li>» <a n:href="Forum:category $topic->forum->id">{$topic->forum->title|firstUpper}</a></li>
	<li>» {$topic->title|firstUpper}</li>
</ul>

<div class="float-right">
	{control searchForm}
</div>

<h2><span class="no-wrap" title="Toto téma bylo uzavřeno" n:if="$topic->locked">{include svg lock}</span> {$topic->title|firstUpper}</h2>

{control postsList}

<div class="right">{control vp}</div>

<p class="right">
	<a n:href="Feed:forum topic => $topic->id" class="buttonLike">{include svg feed} RSS tohoto tématu</a>
</p>

{if (!$topic->locked) and ($user->isInRole('member'))}
	<h2>Rychlá odpověď</h2>
	{control addPostForm}
{/if}

{/block}